<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>title</key>
  <string>QuickTranslate</string>
  <key>items</key>
  <array>

    <dict>
      <key>cell</key><string>PSGroupCell</string>
      <key>label</key><string>Allgemein</string>
    </dict>

    <dict>
      <key>cell</key><string>PSSwitchCell</string>
      <key>label</key><string>Enabled</string>
      <key>defaults</key><string>com.hombergerkurde.quicktranslate</string>
      <key>key</key><string>enabled</string>
      <key>default</key><true/>
      <key>PostNotification</key><string>com.hombergerkurde.quicktranslate/settingschanged</string>
    </dict>

    <dict>
      <key>cell</key><string>PSGroupCell</string>
      <key>label</key><string>API / Provider Keys</string>
      <key>footerText</key><string>Hier kannst du deine Keys eingeben. (Prefs-Bundle wie Translomatic → Textfelder funktionieren.)</string>
    </dict>

    <dict>
      <key>cell</key><string>PSTextFieldCell</string>
      <key>label</key><string>LibreTranslate Server</string>
      <key>defaults</key><string>com.hombergerkurde.quicktranslate</string>
      <key>key</key><string>ltServer</string>
      <key>default</key><string>https://translate.cutie.dating</string>
      <key>placeholder</key><string>https://…</string>
      <key>autoCaps</key><string>none</string>
      <key>autoCorrect</key><string>no</string>
    </dict>

    <dict>
      <key>cell</key><string>PSTextFieldCell</string>
      <key>label</key><string>LibreTranslate API Key</string>
      <key>defaults</key><string>com.hombergerkurde.quicktranslate</string>
      <key>key</key><string>ltApiKey</string>
      <key>placeholder</key><string>(optional)</string>
      <key>isSecure</key><true/>
      <key>autoCaps</key><string>none</string>
      <key>autoCorrect</key><string>no</string>
    </dict>

    <dict>
      <key>cell</key><string>PSTextFieldCell</string>
      <key>label</key><string>DeepL Key</string>
      <key>defaults</key><string>com.hombergerkurde.quicktranslate</string>
      <key>key</key><string>deeplKey</string>
      <key>placeholder</key><string>DeepL-Auth-Key</string>
      <key>isSecure</key><true/>
      <key>autoCaps</key><string>none</string>
      <key>autoCorrect</key><string>no</string>
    </dict>

    <dict>
      <key>cell</key><string>PSTextFieldCell</string>
      <key>label</key><string>Microsoft Key</string>
      <key>defaults</key><string>com.hombergerkurde.quicktranslate</string>
      <key>key</key><string>msKey</string>
      <key>placeholder</key><string>Ocp-Apim-Subscription-Key</string>
      <key>isSecure</key><true/>
      <key>autoCaps</key><string>none</string>
      <key>autoCorrect</key><string>no</string>
    </dict>

    <dict>
      <key>cell</key><string>PSTextFieldCell</string>
      <key>label</key><string>Google API Key</string>
      <key>defaults</key><string>com.hombergerkurde.quicktranslate</string>
      <key>key</key><string>googleKey</string>
      <key>placeholder</key><string>key…</string>
      <key>isSecure</key><true/>
      <key>autoCaps</key><string>none</string>
      <key>autoCorrect</key><string>no</string>
    </dict>

    <dict>
      <key>cell</key><string>PSButtonCell</string>
      <key>label</key><string>Respring</string>
      <key>action</key><string>respring</string>
    </dict>

  </array>
</dict>
</plist>
