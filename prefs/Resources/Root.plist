<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>title</key>
  <string>QuickTranslate</string>
  <key>items</key>
  <array>
    <dict>
      <key>cell</key><string>PSSwitchCell</string>
      <key>label</key><string>Aktiviert</string>
      <key>defaults</key><string>1.com.quicktranslate.prefsfixed</string>
      <key>key</key><string>enabled</string>
      <key>default</key><true/>
    </dict>

    <dict>
      <key>cell</key><string>PSSwitchCell</string>
      <key>label</key><string>Nur in ausgewählten Apps</string>
      <key>defaults</key><string>1.com.quicktranslate.prefsfixed</string>
      <key>key</key><string>useWhitelist</string>
      <key>default</key><false/>
    </dict>

    <dict>
      <key>cell</key><string>PSLinkCell</string>
      <key>label</key><string>Apps auswählen…</string>
      <key>detail</key><string>ATLApplicationListMultiSelectionController</string>
      <key>defaults</key><string>1.com.quicktranslate.prefsfixed</string>
      <key>key</key><string>whitelist</string>
      <key>excludeSystemApps</key><true/>
      <key>enabledKey</key><string>useWhitelist</string>
    </dict>

    <dict>
      <key>cell</key><string>PSGroupCell</string>
      <key>label</key><string>Google Translate</string>
    </dict>

    <dict>
      <key>cell</key><string>PSSecureEditTextCell</string>
      <key>label</key><string>API Key</string>
      <key>defaults</key><string>1.com.quicktranslate.prefsfixed</string>
      <key>key</key><string>googleApiKey</string>
      <key>placeholder</key><string>Dein Google API Key</string>
    </dict>

    <dict>
      <key>cell</key><string>PSEditTextCell</string>
      <key>label</key><string>Zielsprache</string>
      <key>defaults</key><string>1.com.quicktranslate.prefsfixed</string>
      <key>key</key><string>targetLang</string>
      <key>default</key><string>de</string>
      <key>placeholder</key><string>de, en, tr …</string>
    </dict>
  </array>
</dict>
</plist>
